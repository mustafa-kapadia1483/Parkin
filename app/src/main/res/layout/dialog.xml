<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="400dp"
    android:background="@drawable/round_corner"
    android:padding="20dp">

    <TextView
        android:id="@+id/notUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:text="SELECT A VEHICLE TYPE" />

    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:gravity="center"
        android:text="To proceed further"
        android:textSize="12dp" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSubtitle"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bottomsheet"
        android:textColor="@color/white"
        android:text="Car"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelect2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSelect"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bottomsheet"
        android:textColor="@color/white"
        android:text="Bike"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelect3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSelect2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bottomsheet"
        android:textColor="@color/white"
        android:text="ELECtric bike"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelect4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSelect3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/bottomsheet"
        android:textColor="@color/white"
        android:text="ELECtric car"/>





</RelativeLayout>
