<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEF1F1"
    tools:context=".BookingTicket">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/teal_700"
        android:gravity="left|center"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@null"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-50dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/btnback"
            android:gravity="center"
            android:text="Booking Details"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/btnOptions"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_menu" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:text="TRANSACTION ID  - 00001"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:layout_margin="5dp"
        android:src="@drawable/ic_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/download"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:src="@drawable/ic_download"
        app:layout_constraintEnd_toStartOf="@+id/share"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/download">

        <TextView
            android:id="@+id/parkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matunga Station"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"/>
        <View
            android:id="@+id/horiLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#605E5E"/>

        <LinearLayout
            android:id="@+id/addressLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/parkAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:maxWidth="300dp"
                android:maxLines="2"
                android:text="Vidyalankar School Of Information Technology wadala East"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/parkDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29 Feb 2022"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/line1">

            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="12:00"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/arrLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="&#8592;"
                android:gravity="center"
                android:layout_marginTop="-3dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/noHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2hrs"
                android:gravity="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/arrRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="&#8594;"
                android:gravity="center"
                android:layout_marginTop="-3dp"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="14:00"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp" />

        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>